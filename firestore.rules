rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Family Trees - accessible to authenticated users
    match /familyTrees/{treeId} {
      allow read, write: if isAuthenticated();
    }

    // People - accessible to authenticated users
    match /people/{personId} {
      allow read, write: if isAuthenticated();
    }

    // Posts - accessible to authenticated users
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Messages - accessible to authenticated users
    match /messages/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Appointments - accessible to authenticated users
    match /appointments/{appointmentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.createdBy == request.auth.uid;
      allow update: if isAuthenticated(); // Anyone can RSVP
      allow delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
  }
}
